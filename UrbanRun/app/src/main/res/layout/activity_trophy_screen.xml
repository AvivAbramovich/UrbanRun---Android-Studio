<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="team2.urbanrun.TrophyScreen"
    android:background="@drawable/bg_hs"
    android:id="@+id/Frienda">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:autoText="false"
        android:textColor="#ffffffff"
        android:visibility="invisible" />

    <ListView
        android:id="@android:id/list"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:background="#95000000"
        android:layout_above="@+id/GlobalBtn"
        android:layout_alignTop="@+id/textView2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FRIENDS HIGHSCORE"
        android:id="@+id/FriendsBtn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#eed44c"
        android:textColor="#ffffff"
        android:height="36dp"
        android:width="150dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:paddingRight="4dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Global HighScores"
        android:id="@+id/GlobalBtn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#eed44c"
        android:textColor="#ffffff"
        android:height="36dp"
        android:width="150dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"/>

</RelativeLayout>